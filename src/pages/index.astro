---
// Load scene data from JSON file
import scenesData from '../../data/scenes.json';
import '../styles/global.css';

const scenes = scenesData.scenes;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>We Is Us - Timeline Viewer</title>
  </head>
  <body class="max-w-3xl mx-auto p-8 font-sans">
    <h1 class="text-3xl font-bold mb-2">We Is Us - Timeline Viewer</h1>
    <p class="text-gray-600 mb-6">Visualizing the non-linear timeline of the show</p>

    <h2 class="text-2xl font-semibold mb-4">Scenes</h2>
    <div class="flex flex-col gap-8">
      {scenes.map((scene) => (
        <div class="border border-gray-300 p-4 rounded-lg">
          <h3 class="text-xl font-semibold mb-2">Delta: {scene.delta}</h3>
          <p class="text-gray-700 mb-4">{scene.text}</p>
          <div class="flex flex-wrap gap-2">
            {scene.tags.map((tag) => (
              <span class="bg-gray-200 px-2 py-1 rounded text-sm">{tag}</span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </body>
</html>
