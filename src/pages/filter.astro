---
import Navbar from '../components/Navbar.astro';
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
import { SEASONS, ALL_EPISODES } from '../lib/sceneMetadata';

const seasons = SEASONS;
const episodes = ALL_EPISODES;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Spoiler Filter - We Is Us</title>
    <ClientRouter />
  </head>
  <body class="min-h-screen bg-gray-50">
    <Navbar />

    <main class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="bg-white rounded-lg shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">Welcome to We Is Us Timeline</h1>
        <p class="text-gray-600 mb-8">To avoid spoilers, please tell us how far you've watched:</p>

        <form method="GET" action="/" class="space-y-6">
          <div>
            <label for="season" class="block text-sm font-medium text-gray-700 mb-2">
              Season
            </label>
            <select
              id="season"
              name="season"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              {seasons.map((season) => <option value={season}>Season {season}</option>)}
            </select>
          </div>

          <div>
            <label for="episode" class="block text-sm font-medium text-gray-700 mb-2">
              Episode
            </label>
            <select
              id="episode"
              name="episode"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
            >
              {episodes.map((episode) => <option value={episode}>Episode {episode}</option>)}
            </select>
          </div>

          <div class="flex items-center">
            <input
              id="showAll"
              name="showAll"
              type="checkbox"
              value="true"
              class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
            />
            <label for="showAll" class="ml-2 block text-sm text-gray-700">
              I've seen everything - show me all scenes
            </label>
          </div>

          <div class="flex gap-3 pt-4">
            <button
              type="submit"
              class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium"
            >
              View Timeline
            </button>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
