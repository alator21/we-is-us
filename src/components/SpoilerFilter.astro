<!-- Spoiler Filter Modal -->
<div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4 p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Welcome to We Is Us Timeline</h2>
    <p class="text-gray-600 mb-6">To avoid spoilers, please tell us how far you've watched:</p>

    <form method="GET" action="/" class="space-y-4">
      <div>
        <label for="season" class="block text-sm font-medium text-gray-700 mb-2"> Season </label>
        <select
          id="season"
          name="season"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <option value="1">Season 1</option>
          <option value="2">Season 2</option>
          <option value="3">Season 3</option>
        </select>
      </div>

      <div>
        <label for="episode" class="block text-sm font-medium text-gray-700 mb-2"> Episode </label>
        <select
          id="episode"
          name="episode"
          class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <option value="1">Episode 1</option>
          <option value="2">Episode 2</option>
          <option value="3">Episode 3</option>
          <option value="4">Episode 4</option>
          <option value="5">Episode 5</option>
          <option value="6">Episode 6</option>
          <option value="7">Episode 7</option>
          <option value="8">Episode 8</option>
          <option value="9">Episode 9</option>
          <option value="10">Episode 10</option>
        </select>
      </div>

      <div class="flex items-center">
        <input
          id="showAll"
          name="showAll"
          type="checkbox"
          value="true"
          class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500"
        />
        <label for="showAll" class="ml-2 block text-sm text-gray-700">
          I've seen everything - show me all events
        </label>
      </div>

      <div class="flex gap-3 pt-4">
        <button
          type="submit"
          class="flex-1 bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors font-medium"
        >
          Continue
        </button>
      </div>
    </form>
  </div>
</div>
